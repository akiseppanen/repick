{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean; rm -rf node_modules",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run test",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.2",
    "prettier": "^2.0.2",
    "tsdx": "^0.14.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tsdx lint --fix"
    ],
    "*.{js,jsx,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/tsdx",
      "**/tsdx/**"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "jest-date-serializer"
    ]
  }
}

{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "rm -rf node_modules; lerna run clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "test": "tsdx test --env=jsdom",
    "watch": "lerna run --parallel watch",
    "storybook": "start-storybook -p 6006"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^6.0.21",
    "@storybook/addon-storysource": "^6.0.21",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.0.21",
    "@types/classnames": "^2.2.10",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "eslint-plugin-prettier": "^3.1.2",
    "jest-date-serializer": "^1.0.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.1",
    "prettier": "^2.0.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "ts-loader": "^8.0.3",
    "tsdx": "^0.13.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.2",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsdx lint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/tsdx",
      "**/tsdx/**"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "jest-date-serializer"
    ]
  }
}
